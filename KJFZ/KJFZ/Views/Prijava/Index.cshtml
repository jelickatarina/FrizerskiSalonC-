@model KJFZ.Models.Korisnik

@{
    ViewData["Title"] = "Prijava";
}

<h1>Prijava</h1>

<hr />
<div class="row">
    <div class="col-md-4">

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Index">
            <div class="form-group">
                <label>Korisnik</label>
                <input asp-for="KorisnikId" class="form-control" name="pKorisnikId"/>
            </div>
            <div class="form-group">
                <label asp-for="Lozinka" class="control-label"></label>
                <input type="password" class="form-control" name="pLozinka"/>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Prijava" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
